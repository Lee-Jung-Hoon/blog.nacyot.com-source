- content_for :description, config.site_description
- content_for :title_image, "http://blog.nacyot.com/images/nacyot.jpeg"

- featured = blog.articles.select{|article| article.data.featured == true}
- normal = page_articles.select{|article| !article.data.featured}

= partial "partials/summaries", locals: {featured: featured, page_articles: normal, paginate: paginate, prev_page: prev_page, next_page: next_page}
